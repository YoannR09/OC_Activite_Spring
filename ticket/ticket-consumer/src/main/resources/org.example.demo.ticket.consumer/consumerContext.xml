<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Prend en compte la configuration des injections (@Inject...) -->
    <context:annotation-config/>

    <!-- Scanne les packages pour trouver les beans qui se dÃ©clarent (@Named...) -->
    <context:component-scan base-package="org.example.demo.ticket"/>

    <!-- ==== AbstractResource ===== -->

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="org.example.demo.ticket.consumer.impl.dao.AbstractManager" />
        <property name="targetMethod" value="setDataSource" />
        <property name="arguments" ref="DataSource" />
    </bean>


</beans>